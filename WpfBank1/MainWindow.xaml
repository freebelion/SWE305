<Window x:Class="WpfBank1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBank1"
        mc:Ignorable="d"
        Title="ATMWindow"
        Height="300" Width="400"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        FontSize="18">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0"
                     Background="AliceBlue"
                     ItemsSource="{Binding Accounts}"
                     SelectedItem="{Binding SelectedAccount}"/>
            <Button Grid.Row="1"
                    Content="+"
                    Click="CreateAccount"/>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Background="SteelBlue"
                       Text="{Binding SelectedAccount.Balance}"/>

            <StackPanel Grid.Row="1">
                <Button Content="Deposit 50"
                        Tag="50"
                        Click="Button_Click"/>
                <Button Content="Withdraw 50"
                        Tag="-50"
                        Click="Button_Click"/>
                <Button Content="Deposit 100"
                        Tag="100"
                        Click="Button_Click"/>
                <Button Content="Withdraw 100"
                        Tag="-100"
                        Click="Button_Click"/>
                <Button Content="Deposit 250"
                        Tag="250"
                        Click="Button_Click"/>
                <Button Content="Withdraw 250"
                        Tag="-250"
                        Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
